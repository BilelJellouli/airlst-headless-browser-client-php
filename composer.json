{
    "name": "airlst/headless-browser-client-php",
    "description": "AirLST Headless Browser PHP Client",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "airlst",
        "headless-browser",
        "headless-browser-client",
        "headless-browser-client-php"
    ],
    "authors": [
        {
            "name": "Orkhan Ahmadov",
            "email": "hey@orkhan.dev",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/airlst/headless-browser-client-php",
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8.1"
    },
    "require-dev": {
        "airlst/php-cs-fixer-config": "^1.3.1",
        "airlst/phpstan-config": "^1.3.4",
        "airlst/rector-config": "^2.0.3",
        "ergebnis/composer-normalize": "^2.42",
        "mockery/mockery": "^1.6.10",
        "phpunit/phpunit": "^10.5.14"
    },
    "autoload": {
        "psr-4": {
            "Airlst\\HeadlessBrowserClientPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Airlst\\HeadlessBrowserClientPhp\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "ci": [
            "@composer normalize",
            "@composer rector",
            "@composer cs-fixer",
            "@composer phpstan",
            "@composer test"
        ],
        "cs-fixer": "./vendor/bin/php-cs-fixer fix --verbose --config=.php-cs-fixer.php",
        "phpstan": "./vendor/bin/phpstan analyse -c phpstan.php",
        "rector": "./vendor/bin/rector",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
